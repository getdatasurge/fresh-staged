# FreshTrack Pro Caddy Configuration
# Automatic HTTPS via Let's Encrypt
#
# PRODUCTION DOMAIN SETUP:
# Set the DOMAIN environment variable before starting Caddy:
#   export DOMAIN=freshtrackpro.com
# Or in Docker Compose:
#   environment:
#     DOMAIN: freshtrackpro.com
#
# Default: localhost (for development)
# Examples: app.freshtrackpro.com, freshtrack.example.com
#
# For wildcard certificates (multiple subdomains with single cert),
# see Caddyfile.wildcard.example

{
    # Admin email for Let's Encrypt notifications
    # PRODUCTION: Update to your actual admin email
    email {$ADMIN_EMAIL:admin@freshtrackpro.com}

    # Default SNI for IP-based connections (set DEFAULT_SNI env var to your IP)
    default_sni {$DEFAULT_SNI:localhost}

    # Access logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# Main application
# Port-based matching accepts any hostname/IP.
# For domain-specific matching, replace :443 with your domain.
:443 {
    # TLS: Use self-signed certs for IP-based deployments, or Let's Encrypt for domains.
    tls /etc/caddy/certs/server.crt /etc/caddy/certs/server.key

    # Reverse proxy to backend API (strip /api prefix)
    handle_path /api/* {
        reverse_proxy backend:3000 {
            # Health check for load balancing
            health_uri /health
            health_interval 30s
            health_timeout 10s

            # Pass client info headers
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Health endpoint for external monitoring
    reverse_proxy /health backend:3000

    # Reverse proxy to backend tRPC API
    handle /trpc/* {
        reverse_proxy backend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Reverse proxy for Socket.io (real-time features)
    # Caddy handles WebSocket upgrades automatically â€” do NOT add
    # header_up Connection/Upgrade as it interferes with built-in handling
    handle /socket.io/* {
        reverse_proxy backend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Static frontend files (served by nginx in production)
    reverse_proxy /* frontend:8080

    # Response compression
    encode gzip zstd

    # Security headers
    header {
        # Prevent content type sniffing
        X-Content-Type-Options "nosniff"

        # Clickjacking protection
        X-Frame-Options "DENY"

        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"

        # XSS protection (legacy browsers)
        X-XSS-Protection "1; mode=block"

        # Permissions policy (restrict browser features)
        Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"

        # Content Security Policy
        # NOTE: Adjust 'self' sources based on your domain
        # Stack Auth requires: api.stack-auth.com
        # Google Fonts requires: fonts.googleapis.com, fonts.gstatic.com
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https:; connect-src 'self' https://api.stack-auth.com wss:; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"

        # Remove server identification
        -Server
    }
}

# HTTP to HTTPS redirect
:80 {
    redir https://{host}{uri} permanent
}

# Monitoring and Status subdomains are disabled for IP-based deployments.
# When using a real domain, uncomment these blocks:
#
# monitoring.{$DOMAIN:localhost} {
#     reverse_proxy grafana:3000
#     header {
#         X-Content-Type-Options "nosniff"
#         -Server
#     }
# }
#
# status.{$DOMAIN:localhost} {
#     reverse_proxy uptime-kuma:3001
#     header {
#         X-Content-Type-Options "nosniff"
#         -Server
#     }
# }
